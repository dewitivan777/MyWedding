<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#GuestEmailAll">
    <span class="glyphicon glyphicon-bullhorn" aria-hidden="true"></span>
    <span><strong>Bulk Email</strong></span>
</button>

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="GuestEmailAll">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Sent Email</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>

            <div class="modal-body">
                <form method="post" asp-controller="Guest" asp-action="emailAll">

                    <div class="form-group">
                        <input type="text" name="subject" class="form-control" placeholder="Subject" style="min-width:100%" />
                    </div>
                    <div class="form-group">
                        <textarea name="message" class="form-control" rows="3" placeholder="Message" style="min-width:100%"> </textarea>
                    </div>
                    <div class="form-group">
                        <input type="file" name="attach" class="form-control"  style="min-width:100%"> 
                    </div>
                    <div class="form-group">
                        <div class="modal-footer">
                            <button type="submit" class="btn center btn-primary">Send</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>